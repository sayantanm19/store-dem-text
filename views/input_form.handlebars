<div class="row">
    
    {{#if errors}}
    <div class="card-panel teal">
        <div class="col s12">
            <span class="white-text">Please Correctly Fill the Required Fields</span>
        </div>
    </div>
    {{/if}}

    <form method="POST" class="col s12 z-depth-3" id="pasteform">

        <h3>Submit a Paste here</h3>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">mode_edit</i>
                    <textarea id="pastex" class="materialize-textarea validate" type="text" name="paste" required="" aria-required="true"></textarea>
                    <label for="pastex">Paste here</label>
                    {{!-- <span class="helper-text" data-error="wrong" data-success="right"></span> --}}
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input value="#prefilledhash" id="idinput" type="text" name="idx" class="validate" required="" aria-required="true">
                    <label class="active" for="idinput">Enter your link (optional)</label>
                    {{!-- <span class="helper-text" data-error="wrong" data-success="right"></span> --}}
                </div>
            </div>


            <!--div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">fingerprint</i>
                    <input type="checkbox" id="test5" />
                    <label for="test5">Private?</label>
                </div>
            </div-->


            <div class="row">
                <div class="col s6 offset-s6">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>  
    </form>
</div>