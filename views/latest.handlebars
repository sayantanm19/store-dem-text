<h3>Lastest Pastes</h3>
{{#each latest}}
    <div class="card-panel">
        <div class="row">
            <div class="col s12">
                <h5>{{this.title}}</h5>
            </div>
            <div class="col l8 s12">
                {{this.paste}}
            </div>
            <div class="col l2 s12">
                <span><b> Created On: </b>{{formattedDate this.createdAt}} </span>
            </div>
            <div class="col l2 s12">
                <span><b>Expires: </b>{{secondsAgo this.expirationDate}}</span>
            </div>
            <div class="col s12 offset-s10">
                <a class="btn" href="/pastes/{{this.idx}}">Goto Post</a>
            </div>
        </div>

    </div>

{{/each}}
